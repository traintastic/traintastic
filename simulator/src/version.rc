#include <winver.h>
#include <version.hpp>
#include <traintastic/copyright.hpp>

#ifndef TRAINTASTIC_VERSION_EXTRA
  #define TRAINTASTIC_VERSION_EXTRA
#endif

VS_VERSION_INFO VERSIONINFO
