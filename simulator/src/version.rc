        BLOCK "040904E4"
        BEGIN
            VALUE "CompanyName",      "Traintastic"
            VALUE "FileDescription",  "Traintastic simulator application"
            VALUE "FileVersion",      TRAINTASTIC_VERSION TRAINTASTIC_VERSION_EXTRA
